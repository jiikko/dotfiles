{
  "solargraph.autoformat": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "tsserver.enable": true,
  "codeLens.enable": true,
  "colors.enable": true,
  "highlight.trace": "verbose",
  "solargraph.hover": true,
  "coc.source.tsserver.enable": true,
  "sh.enable": true,
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    },
    "languageserver": {
      "golang": {
        "command": "gopls",
        "rootPatterns": ["go.mod"],
        "filetypes": ["go"]
      },
      "typescript": {
        "command": "tsserver",
        "rootPatterns": ["tsconfig.json"],
        "filetypes": ["typescript", "ts", "tsx"]
      }
    }
  },
  "cSpell.language": "en",
  "cSpell.words": ["nvim", "findy", "shfmt"],
  "cSpell.ignoreRegExpList": [
    "<!-- prettier-ignore -->\\n(`{3,})\\w*\\n[\\s\\S]+?\\1",
    "\\[(\\*{2})?@[-\\w]+?\\1\\]",
    "by @[-\\w]+(?:, @[-\\w]+)*",
    "ve{2,}r{2,}y",
    "ve+r+y+long\\w*",
    "\\(https?://.*?\\)",
    "author: \".*?\"",
    "authorURL: \".*?\"",
    "\"author\": \".*?\"",
    "(long|after){3,}"
  ]
}
